<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CarCatalog.Dictionary">
    <Style x:Key="baseFont">
        <Setter Property="Control.FontFamily" Value="Times New Roman"/>
        <Setter Property="Control.Padding" Value="5"/>
    </Style>

    <Style x:Key="Font1" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="14"/>
    </Style>

    <Style x:Key="Font2" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="18"/>

    </Style>

    <Style x:Key="Font3" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="20"/>
    </Style>

    <Style x:Key="Font4" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="24"/>
    </Style>

    <Style TargetType="Menu" BasedOn="{StaticResource Font2}"/>
    <Style TargetType="TreeViewItem" BasedOn="{StaticResource Font3}">
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="IsExpanded" Value="True"/>
    </Style>
</ResourceDictionary>